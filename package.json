{
  "name": "@github/details-menu-element",
  "version": "0.9.0",
  "description": "A menu opened with a <details> button.",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "license": "MIT",
  "repository": "github/details-menu-element",
  "files": [
    "dist"
  ],
  "keywords": [
    "details",
    "menu"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "github-lint",
    "prebuild": "npm run clean && npm run lint && mkdir dist",
    "build": "rollup -c && cp src/index.js.flow dist/index.esm.js.flow && cp src/index.js.flow dist/index.umd.js.flow",
    "pretest": "npm run build",
    "test": "karma start test/karma.config.js",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "babel-preset-github": "^2.1.2",
    "chai": "^4.2.0",
    "eslint": "^5.12.0",
    "eslint-plugin-github": "^1.9.0",
    "flow-bin": "^0.90.0",
    "karma": "^4.0.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "^5.0.5",
    "rollup": "^1.10.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.2.3"
  },
  "eslintIgnore": [
    "dist/"
  ]
}
